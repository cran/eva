citHeader("To cite package 'eva' in publications use:")

year <- sub("-.*", "", meta$Date)
vers <- sprintf("R package version %s", meta$Version)

citEntry(entry="Manual",
         title = "eva: Extreme Value Analysis with Goodness-of-Fit Testing",
         author = personList(as.person("Brian Bader"),
                             as.person("Jun Yan")),
         year = year,
	       vers = vers,

         textVersion =
         paste("Brian Bader, Jun Yan (",year,"), ",
               "eva: Extreme Value Analysis with Goodness-of-Fit Testing. ",
			          vers, ".", sep=""))
